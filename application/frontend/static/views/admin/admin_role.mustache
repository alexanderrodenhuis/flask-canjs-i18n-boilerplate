<h2>{{i18n 'admin.role.title'}}</h2>
<hr/>
<table class='table'>
    <thead>
    <tr>
        <th class="col-md-1"></th>
        <th class="col-md-4">{{i18n 'admin.role.name'}}</th>
        <th class="col-md-6">{{i18n 'admin.role.description'}}</th>
        <th class="col-md-1 center"></th>
    </tr>
    </thead>
    <!--<tfoot>-->
    <!--<tr>-->
        <!--<td>count</td>-->
        <!--<td>1</td>-->
    <!--</tr>-->
    <!--</tfoot>-->
    <tbody>
    {{#roles}}
    <tr>
        <td class="col-md-1"><input name='selectRole' type="radio" class="select-role" data-id="{{id}}"></td>
        <td class="col-md-4">{{name}}</td>
        <td class="col-md-6">{{description}}</td>
        <td class="col-md-1 center">
                <i class="delete-{{name}} delete-role-confirm fa fa-times fa-lg" data-id='{{id}}'></i>
        </td>
    </tr>
    {{/roles}}
    </tbody>
</table>
<ul class="pager">
  {{#has_prev}}
    <li class="previous"><a href="/#!admin/role/{{prev_page}}">&larr; {{i18n 'page.previous'}}</a></li>
  {{/has_prev}}
  {{#has_next}}
    <li class="next"><a href="/#!admin/role/{{next_page}}">{{i18n 'page.next'}} &rarr;</a></li>
  {{/has_next}}
</ul>
<button type="button" class="btn btn-primary create-new-role-form">
            {{i18n 'admin.role.showNewForm'}}
        </button>
<hr/>
<form id="adminRoleForm" name="adminRoleForm" method="put" class="form-horizontal">
    <h4>{{i18n 'admin.role.formTitle'}}</h4>
    <div class="role-name-wrapper form-group col-md-12">
        <label for="name" class="col-md-4">{{i18n 'admin.role.name'}}</label>
        <input id="name" name="name" type="text"
               placeholder="{{i18n 'admin.role.enterName'}}" class="role-name form-control col-md-12" tabindex="1"/>
    </div>
    <div class="role-description-wrapper form-group col-md-12">
        <label for="description" class="col-md-4">{{i18n 'admin.role.description'}}</label>
        <input id="description" name="description" type="text"
               placeholder="{{i18n 'admin.role.enterDescription'}}" class="role-description form-control col-md-12" tabindex="2"/>
    </div>
    <div class="create-role-wrapper form-group col-md-12">
        <button type="submit" class="btn btn-primary update-role hidden pull-right" tabindex="3">
            {{i18n 'admin.role.update.title'}}
        </button>
        <button type="submit" class="btn btn-primary create-role pull-right" tabindex="4">
            {{i18n 'admin.role.submit'}}
        </button>
    </div>
</form>
 <div class="modal" id="deleteRoleConfirm">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close cancel-confirm" data-dismiss="modal"
                            aria-hidden="true">&times;</button>
                    <h4 class="modal-title">{{i18n 'admin.role.confirm.title'}}</h4>
                </div>
                <div class="modal-body">
                    {{i18n 'admin.role.confirm.content'}}
                </div>
                <div class="modal-footer">
                    <button type="button" data-dismiss="modal"
                            class="btn cancel-confirm">{{i18n 'admin.role.confirm.close'}}</button>
                    <button type="button"
                            class="btn delete-role-final btn-inverse">{{i18n 'admin.role.confirm.submit'}}</button>
                </div>
            </div>
            <!-- /.modal-content -->
        </div>
        <!-- /.modal-dialog -->
    </div>
    <!-- /.modal -->