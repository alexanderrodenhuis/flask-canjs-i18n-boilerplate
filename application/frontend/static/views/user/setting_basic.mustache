<form id="updateBasicForm" name="updateBasicForm" method="put">
    <h4>{{i18n 'setting.basic.title'}}</h4>
    <hr/>
    <input type="hidden" id="id" name="id" value="{{user.id}}"/>

    <div class="email">
        <label for="email" class="span4">{{i18n 'users.email'}}</label>
        <input id="email" name="email" readonly type="email" class="email span8" value="{{user.email}}"/>
    </div>
</form>